#!/bin/bash -login
#SBATCH --time=02:00:00
#SBATCH --nodes=1
#SBATCH --cpus-per-task=4
#SBATCH --mem-per-cpu=20G
#SBATCH --job-name Genome_Index_STAR_Teresi
#SBATCH -o GenomeIndex.out
#SBATCH -e GenomeIndex.err
# -------------------------------

# Load Modules
module purge
module load GNU/7.3.0-2.30
module load OpenMPI/3.1.1
module load STAR/2.6.1c

# Build a Genome Index for STAR
# genomeDir is output dir, dir must be clear & created prior

STAR --runThreadN 2 \
--runMode genomeGenerate \
--genomeDir /mnt/research/edgerpat_lab/Scotty/Blueberry_RNA_Seq/Input/Genome_Index \
--genomeFastaFiles /mnt/research/edgerpat_lab/Scotty/Blueberry_RNA_Seq/Scripts/Assembly_Subset/BlueHaplotypeBlueberry.fa \
--sjdbGTFfile /mnt/research/edgerpat_lab/Scotty/Blueberry_RNA_Seq/Scripts/Assembly_Subset/Filtered_Blueberry_Annot.gff \
--sjdbGTFtagExonParentTranscript Parent \
--sjdbOverhang 149

